package LeetCodeSort;

public class LeetCode1502 {

	public static void main(String[] args) {


	}
	public boolean canMakeArithmeticProgression(int[] arr) {
		int count=1;
		int pro=arr[1]-arr[0];
		for (int i = 1; i < arr.length; i++) {
			if(arr[i]-arr[i-1]==pro) {
				count++;
			}
		}
		if(count==arr.length) {
			return true;
		}
	return false;}

}
