package LeetCodeArrays;

public class LeetCode1304 {

	public static void main(String[] args) {
int n=4;
System.out.println(sumZero(n));

	}
	   public static int[] sumZero(int n) {
		 if(n%2==0) {
			 
		 }
	        int [] arr=new int[n];
	        int i=0;
	        while(i<=n/2) {
	        	arr[i]=i;
	        	i++;
	        }
	        while(i<n) {
	        	arr[i]=i-n;
	        	i++;
	        }
	        return arr;
	    }
}
