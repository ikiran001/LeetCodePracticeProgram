package LeetCodeArrays;

public class LeetCode198 {

	public static void main(String[] args) {
int[] arr= {2,7,9,3,1,4};
System.out.println( rob(arr));
	}

	static int rob(int[] nums) {
		int n=nums.length-1;
		int odd=0;
		int even=0;
		for (int i = 0; i <=n/2; i++) {
			odd+=nums[i*2];
		}
		for (int i = 0; i <=n/2; i++) {
			even+=nums[i*2+1];
		}
return Math.max(odd, even);
	}
}
