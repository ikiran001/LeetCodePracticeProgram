package LeetCodeArrays;

public class LeetCode896 {

	public static void main(String[] args) {
		int[] arr= {1,2,3,4,5,6,7};
		isMonotonic(arr);
	}
static boolean isMonotonic(int[] nums) {
	boolean inc=true;
	boolean dec=false;
	
        for (int i = 0; i < nums.length; i++) {
			if(nums[i]<nums[i+1]) {
				dec=false;
			}
			if (nums[i]>nums[i+1]) {
				inc=false;
			}
			
			if(inc==false && dec== false) return false;
		}
        return true;
    }
}
