package LeetCodeArrays;

import java.util.ArrayList;
import java.util.List;

//https://leetcode.com/problems/add-to-array-form-of-integer/
/*The array-form of an integer num is an array representing its digits in left to right order.

For example, for num = 1321, the array form is [1,3,2,1]*/

public class LeetCode989 {

	public static void main(String[] args) {
		int [] num= {9,9,9,9,9,9,9,9,9,9};
		System.out.println(	addToArrayForm(num , 1));
	}


	static List<Integer> addToArrayForm(int[] num, int k) {
		ArrayList<Integer> list=null;
		int newNum =num[0];


		for (int i = 0; i < num.length-1; i++) {
			newNum=num[i+1]+newNum*10;
		
		}
		int lengthOfNewNo= (int)Math.log10(newNum)+1;
		newNum=newNum+k;  
		int lengthafteradd=(int)Math.log10(newNum)+1;
		int addedLength=lengthafteradd-lengthOfNewNo;
		list=new ArrayList<>();
		int arrLength=num.length;

		if (lengthafteradd>lengthOfNewNo) {
			arrLength= arrLength+addedLength;
		}

		for (int i = 0; i <arrLength ; i++) {

			int sum=0;
			while(newNum>0) {
				sum=newNum%10;
				list.add(sum);
				newNum=newNum/10;
				break;

			}
		}		
		List<Integer>	list2=new ArrayList<>();
		for (int i = arrLength-1; i>=0; i--) {


			list2.add(list.get(i));

		}

		return list2;
	}



}
