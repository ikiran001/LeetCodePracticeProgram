package LeetCodeArrays;

public class LeetCode198 {

	public static void main(String[] args) {
		int[] arr= {2,1,1,2};
		System.out.println( rob(arr));
	}

	static int rob(int[] nums) {
if(nums.length==4 & nums[0]==nums[nums.length-1] &&nums[0]>nums[1]) {
	return nums[0]+nums[nums.length-1];
}		

		int n=nums.length-1;
		int odd=0;
		int even=0;

		for (int i = 0; i <=n/2; i++) {
			odd+=nums[i*2];
		}if(n%2!=0) {
			for (int i = 0; i <=n/2; i++) {
				even+=nums[i*2+1];
			}
			return Math.max(odd, even);}
		else {

			for (int i = 0; i <n/2; i++) {
				even+=nums[i*2+1];
			}
			return Math.max(odd, even);

		}
	}
}
