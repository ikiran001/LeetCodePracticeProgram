package Recursion;

public class LeetCode7 {

	public static void main(String[] args) {
		int a=1534236469;
		System.out.println(reverseintegerLong(a));

	}

	public static int reverse(int x) {
		/*
		 * if(x>1534236461) { return (int)reverseintegerLong(x); }
		 */
		if(x<0) {
			x*=-1;
			return -1*reverseinteger(x);
		}
		return reverseinteger(x);
	}


	static int reverseinteger(int x) {
		int length=(int) Math.log10(x)+1;
		if(x%10==x) {
			return x;
		}
		int mod=x%10;
		return (int) ((mod*(Math.pow(10, length-1)))+reverse(x/10));
	}
	
	static Long reverseintegerLong(int x) {
		int length=(int) Math.log10(x)+1;
		if(x%10==x) {
			return (long)x;
		}
		int mod=x%10;
		return (long) ((mod*(Math.pow(10, length-1)))+reverse(x/10));
	}
}
