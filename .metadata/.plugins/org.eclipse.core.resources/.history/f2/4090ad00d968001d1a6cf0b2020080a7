package BinarySearch;

import java.util.Arrays;

public class BinarySearch2DSoertedArray {

	public static void main(String[] args) {
	int[][] arr=	{{1,3,5,7},{10,11,16,20},{23,30,34,60}};
	
System.out.println(Arrays.toString(search(arr, 3)));
	}

	static int[] search(int[][] matrix, int target) {
		int row=0;
		int col=matrix.length-1;
		while(row<matrix.length && col>=0) {
			if(matrix[row][col]==target) {
				return new int[]{row,col};
			}
			else if(matrix[row][col]<target) { // if target is bigger then eliminate the row
				row++;
			}
			else {  // if element is bigger eliminate the column
				col--;
			}
			
		}
	
	return new int[] {-1,-1};
			}

}
